<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="485sp"
        android:layout_height="88sp"
        android:background="@drawable/heading_eating"
        android:elevation="8dp"
        android:fontFamily="@font/uefa_titling"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:shadowColor="#000000"
        android:text="@string/profile_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="460dp"
        android:layout_height="55dp"
        android:layout_marginTop="26dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/bar"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/button_statistics"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/custom_button_3"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/statistics_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorLink="#FFFFFF"
        android:textSize="19sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView27"
        app:layout_constraintEnd_toEndOf="@+id/imageView27"
        app:layout_constraintTop_toTopOf="@+id/imageView27" />

    <Button
        android:id="@+id/button_information"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/custom_button_4"
        android:text="@string/information_text"
        android:textColor="#000000"
        android:textSize="19sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView27"
        app:layout_constraintStart_toStartOf="@+id/imageView27"
        app:layout_constraintTop_toTopOf="@+id/imageView27" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="453dp"
        android:layout_height="372dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView27"
        app:srcCompat="@drawable/graybackground"
        android:importantForAccessibility="no" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="420dp"
        android:layout_height="352dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView28"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        app:srcCompat="@drawable/whitebackground"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/Height"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="99dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/Weight"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="171dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/desired_weight"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="243dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/paul"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="315dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/level"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="321dp"
        android:layout_height="288dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        app:srcCompat="@drawable/liner"
        android:importantForAccessibility="no" />

    <EditText
        android:id="@+id/height_et"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:fontFamily="@font/roboto_medium"
        android:hint="xxx см"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        tools:ignore="HardcodedText,TextFields" />

    <EditText
        android:id="@+id/weight_et"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="92dp"
        android:background="@null"
        android:fontFamily="@font/roboto_medium"
        android:hint="xxx.хх кг"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        tools:ignore="HardcodedText,TextFields,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/weight_desired_et"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="164dp"
        android:background="@null"
        android:fontFamily="@font/roboto_medium"
        android:hint="xxx.хх кг"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        tools:ignore="HardcodedText,TextFields" />

    <Button
        android:id="@+id/button_male_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/custom_button_3"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/female_male"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />

    <Button
        android:id="@+id/button_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginTop="302dp"
        android:background="@drawable/custom_button_3"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/level_et"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28" />


</androidx.constraintlayout.widget.ConstraintLayout>