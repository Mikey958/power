<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="459dp"
    android:layout_height="477dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/pause_logo_text"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="291dp"
        android:layout_height="87dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/custmo_button_2"
        android:fontFamily="@font/roboto"
        android:scaleType="centerCrop"
        android:text="@string/continue_btn"
        android:textColor="#000000"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/restartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="291dp"
        android:layout_height="87dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/custmo_button_2"
        android:fontFamily="@font/roboto"
        android:scaleType="centerCrop"
        android:text="@string/restart_btn"
        android:textColor="#000000"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/exitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continueButton" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="291dp"
        android:layout_height="87dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/custmo_button_2"
        android:fontFamily="@font/roboto"
        android:scaleType="centerCrop"
        android:text="@string/exit_btn"
        android:textColor="#000000"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartButton" />

    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/play_logo_btn"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/continueButton"
        app:layout_constraintStart_toStartOf="@+id/continueButton"
        app:layout_constraintTop_toTopOf="@+id/continueButton"
        app:srcCompat="@drawable/play"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="21dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/reset_logo_btn"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/restartButton"
        app:layout_constraintStart_toStartOf="@+id/restartButton"
        app:layout_constraintTop_toTopOf="@+id/restartButton"
        app:srcCompat="@drawable/reset"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/menu_logo_btn"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/exitButton"
        app:layout_constraintStart_toStartOf="@+id/exitButton"
        app:layout_constraintTop_toTopOf="@+id/exitButton"
        app:srcCompat="@drawable/menu"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>