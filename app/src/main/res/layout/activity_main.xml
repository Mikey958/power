<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-48dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/oval"
        android:contentDescription="@string/welcome_background"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="390sp"
        android:layout_height="144sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/uefa_titling"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <ImageButton
        android:id="@+id/trainingButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="197dp"
        android:contentDescription="@string/error_training_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/training" />

    <ImageButton
        android:id="@+id/eatingButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/error_eating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/eating"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:contentDescription="@string/error_eating_button"
        android:id="@+id/achievementsButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="197dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingButton"
        app:srcCompat="@drawable/achivments" />

    <ImageButton
        android:contentDescription="@string/error_profile_button"
        android:id="@+id/profileButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eatingButton"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/trainingButton"
        app:layout_constraintTop_toTopOf="@+id/trainingButton"
        app:srcCompat="@drawable/trainingtext"
        android:contentDescription="@string/error_trainingtext"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/achievementsButton"
        app:layout_constraintTop_toTopOf="@+id/achievementsButton"
        app:srcCompat="@drawable/achievmentstext"
        android:contentDescription="@string/error_achievmenttext" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/eatingButton"
        app:layout_constraintTop_toTopOf="@+id/eatingButton"
        app:srcCompat="@drawable/eatingtext"
        android:contentDescription="@string/error_eatingtext"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/profileButton"
        app:layout_constraintTop_toTopOf="@+id/profileButton"
        app:srcCompat="@drawable/profiletext"
        android:contentDescription="@string/error_profiletext"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="281dp"
        android:layout_height="26dp"
        android:layout_marginTop="56dp"
        android:max="123"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:progressTint="#D9D9D9"
        android:secondaryProgress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achievementsButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/progress_text"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achievementsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>